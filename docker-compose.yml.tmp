# vim: set expandtab sw=2:

# <peeer dependency>
# - val1 <- seed
# - seed <- val2, val3, val4, val5, val6

version: '3.3'
services:
  seed:
    container_name: seed
    image: amolabs/amotest
    networks:
      - amolocal
    environment:
      - MONIKER=seed
      - PEERS=@val1_addr@@val1:26656
    volumes:
      - @dataroot@/seed/tendermint:/tendermint:Z
      - @dataroot@/seed/amo:/amo:Z

  val1:
    container_name: val1
    image: amolabs/amotest
    networks:
      - amolocal
    environment:
      - MONIKER=val1
      - PEERS=
    ports:
      - "26656-26657:26656-26657"
    volumes:
      - @dataroot@/val1/tendermint:/tendermint:Z
      - @dataroot@/val1/amo:/amo:Z

  val2:
    container_name: val2
    image: amolabs/amotest
    networks:
      - amolocal
    environment:
      - MONIKER=val2
      - PEERS=@seed_addr@@seed:26656
    volumes:
      - @dataroot@/val2/tendermint:/tendermint:Z
      - @dataroot@/val2/amo:/amo:Z

  val3:
    container_name: val3
    image: amolabs/amotest
    networks:
      - amolocal
    environment:
      - MONIKER=val3
      - PEERS=@seed_addr@@seed:26656
    volumes:
      - @dataroot@/val3/tendermint:/tendermint:Z
      - @dataroot@/val3/amo:/amo:Z

  val4:
    container_name: val4
    image: amolabs/amotest
    networks:
      - amolocal
    environment:
      - MONIKER=val4
      - PEERS=@seed_addr@@seed:26656
    volumes:
        - @dataroot@/val4/tendermint:/tendermint:Z
        - @dataroot@/val4/amo:/amo:Z

  val5:
    container_name: val5
    image: amolabs/amotest
    networks:
      - amolocal
    environment:
      - MONIKER=val5
      - PEERS=@seed_addr@@seed:26656
    volumes:
        - @dataroot@/val5/tendermint:/tendermint:Z
        - @dataroot@/val5/amo:/amo:Z

  val6:
    container_name: val6
    image: amolabs/amotest
    networks:
      - amolocal
    environment:
      - MONIKER=val6
      - PEERS=@seed_addr@@seed:26656
    volumes:
        - @dataroot@/val6/tendermint:/tendermint:Z
        - @dataroot@/val6/amo:/amo:Z


networks:
  amolocal:
    driver: bridge
    ipam:
      driver: default
      config:
      -
        subnet: 192.167.10.0/24
